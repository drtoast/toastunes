.round_box{:id => "rating_#{rating.id}"}
  .album_thumbnail= link_to image_tag(rating.album && rating.album.thumbnail ? "thumbnails/#{rating.album.thumbnail}" : "no_cover.jpg", :class => 'thumbnail shadow', :title => rating.album && "#{rating.album.artist_name} - #{rating.album.title}"), rating.album
  .album_details
    = render :partial => 'shared/show_rating', :locals => {:rating => rating.rating}
    %br
    .comment_attribution= display_user_name(rating.user) + " on " + rating.created_at.strftime("%m/%d/%Y")
  .clear