  </div>

  <div class="field">
    <%= f.label :artist %><br />
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "compilation?" %><br />
    <%= f.check_box :compilation %>
  </div>

  <div class="field">
    <%= f.label :genre %><br />
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
