- album = genre.albums.detect{|a| a.thumbnail}
.album_thumbnail= link_to image_tag(album ? "thumbnails/#{album.thumbnail}" : "no_cover.jpg", {:class=>'thumbnail'}), album
.album_details
  .title= link_to genre.name, albums_path(:genre => genre.id)
  - genre.albums.sort{|a,b| a.title.to_s.downcase <=> b.title.to_s.downcase}.each do |album|
    .artist_album= link_to(album.title, album)
.clear
