.round_box{:id => "comment_#{comment.id}"}
  .album_thumbnail= link_to image_tag(comment.album && comment.album.thumbnail ? "thumbnails/#{comment.album.thumbnail}" : "no_cover.jpg", :class => 'thumbnail shadow', :title => comment.album && "#{comment.album.artist_name} - #{comment.album.title}"), comment.album
  .album_details
    .comment_body= '"' + comment.body.to_s + '"'
    .comment_attribution
      = display_user_name(comment.user) + " on " + comment.created_at.strftime("%m/%d/%Y")
      - if comment.user == current_user
        = link_to("(delete)", comment_path(comment), :method => :delete, :remote => true, :confirm => "Really?")
  .clear