%title= @album

#container.container_12

  #breadcrumbs.grid_12
    #artist
      %a{:href=>artist_url(@artist)}= @artist
    #album
      %span= @album

  #songlist.grid_4

    #controls
      %ul
        %li
          %a.button{:id => "play", :href=>"#"}
            %span play
        %li
          %a.button{:id => "prev", :href=>"#"}
            %span &lt;&lt;
        %li
          %a.button{:id => "next", :href=>"#"}
            %span &gt;&gt;
      %canvas{:id=>"playhead", :width => 200, :height => 10}

    - @songs.each_with_index do |song, i|
      .songrow
        %a.song{:href=>song_url(song), :id=>"song_#{i+1}"}= song_display(song)
    #player_container
      %audio{:id=>"player",:autobuffer=>"autobuffer", :autoplay=>false}
    #home
      %a{:href=>"/"} < home

  #cover.grid_8
    - if @cover
      %img{:src => @cover, :class=>'bounded', :id=>'cover_image'}

  .clear &nbsp;
